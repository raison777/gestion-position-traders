<h2>Listes des traders</h2>
<div class='table-section'>
  <table>
    <tr>
      <th>Nom du trader</th>
      <th>Somme agrégée des ventes</th>
    </tr>
    <% @lines.each do |t| -%>
        <tr>
          <td>
            <%= link_to action: 'show', id: t[:id] do -%><b><%= t[:name] %></b><% end %>
          </td>
          <td>
            <%    if !t[:aggregate_sum].nil? %>
                <span><%=t[:aggregate_sum] %>€</span>
            <%    else %>
                <span> aucune vente effectuée </span>
            <%    end %>
          </td>
        </tr>
    <% end -%>
  </table>
</div>

<div class="table-actions">
  <%= link_to :action=> :new do %>+Ajouter<% end %>
</div>