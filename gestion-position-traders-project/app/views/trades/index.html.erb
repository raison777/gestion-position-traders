<h2>Listes des transactions</h2>
<div class='table-section'>
  <table>
    <tr>
      <th>N°</th>
      <th>Date de vente</th>
      <th>Quantité vendue</th>
      <th>Prix d'une action</th>
      <th>Trader en charge</th>
      <th>Action vendue</th>
    </tr>
    <% @trades.each do |t| %>
        <tr>
          <td><%= t[:id] %></td>
          <td><%= t[:date] %></td>
          <td><%= t[:quantity] %></td>
          <td><%= t[:price] %>€</td>
          <td><%= t[:trader_name] %></td>
          <td><%= t[:action_name] %></td>
        </tr>
    <% end %>
  </table>
</div>


<div class="table-actions">
  <%= link_to :action=> :new do %>+Ajouter<% end %>
</div>